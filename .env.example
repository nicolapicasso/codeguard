# Server
PORT=3000
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=info

# PostgreSQL (used by docker-compose for the postgres container)
POSTGRES_USER=omnicodex
POSTGRES_PASSWORD=secret
POSTGRES_DB=omnicodex

# Database (for local dev without Docker; Docker overrides this automatically)
DATABASE_URL=postgresql://omnicodex:secret@localhost:5432/omnicodex

# Redis
REDIS_URL=redis://localhost:6379

# Auth
JWT_SECRET=your-jwt-secret-for-admin
HMAC_TOLERANCE_SECONDS=300

# Rate Limiting
RATE_LIMIT_PER_USER_PER_MINUTE=30
RATE_LIMIT_PER_IP_PER_MINUTE=100

# Security
STORE_PLAIN_CODES=false
CUSTOM_FUNCTION_TIMEOUT_MS=100
